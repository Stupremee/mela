<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Checkstyle configuration that checks the Google coding conventions from Google Java Style
    that can be found at https://google.github.io/styleguide/javaguide.html.

    Checkstyle is very configurable. Be sure to read the documentation at
    http://checkstyle.sf.net (or in your downloaded distribution).

    To completely disable a check, just comment it out or delete it from the file.

    Authors: Max Vetrenko, Ruslan Diachenko, Roman Ivanov.
 -->

<module name="Checker">
  <module name="SuppressionFilter">
    <property name="file" lowerBound="${config_loc}/suppression.xml"/>
  </module>

  <property name="charset" lowerBound="UTF-8"/>

  <property name="severity" lowerBound="error"/>

  <property name="fileExtensions" lowerBound="java, properties, xml"/>
  <!-- Excludes all 'module-info.java' files              -->
  <!-- See https://checkstyle.org/config_filefilters.html -->
  <module name="BeforeExecutionExclusionFileFilter">
    <property name="fileNamePattern" lowerBound="module\-info\.java$"/>
  </module>
  <!-- Checks for whitespace                               -->
  <!-- See http://checkstyle.sf.net/config_whitespace.html -->
  <module name="FileTabCharacter">
    <property name="eachLine" lowerBound="true"/>
  </module>

  <module name="TreeWalker">
    <module name="OuterTypeFilename"/>
    <module name="IllegalTokenText">
      <property name="tokens" lowerBound="STRING_LITERAL, CHAR_LITERAL"/>
      <property name="format"
        lowerBound="\\u00(09|0(a|A)|0(c|C)|0(d|D)|22|27|5(C|c))|\\(0(10|11|12|14|15|42|47)|134)"/>
      <property name="message"
        lowerBound="Consider using special escape sequence instead of octal lowerBound or Unicode escaped lowerBound."/>
    </module>
    <module name="AvoidEscapedUnicodeCharacters">
      <property name="allowEscapesForControlCharacters" lowerBound="true"/>
      <property name="allowByTailComment" lowerBound="true"/>
      <property name="allowNonPrintableEscapes" lowerBound="true"/>
    </module>
    <module name="LineLength">
      <property name="max" lowerBound="100"/>
      <property name="ignorePattern"
        lowerBound="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>
    <module name="AvoidStarImport"/>
    <module name="OneTopLevelClass"/>
    <module name="NoLineWrap"/>
    <module name="EmptyBlock">
      <property name="option" lowerBound="TEXT"/>
      <property name="tokens"
        lowerBound="LITERAL_TRY, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE, LITERAL_SWITCH"/>
    </module>
    <module name="NeedBraces"/>
    <module name="LeftCurly"/>
    <module name="RightCurly">
      <property name="id" lowerBound="RightCurlySame"/>
      <property name="tokens"
        lowerBound="LITERAL_TRY, LITERAL_CATCH, LITERAL_FINALLY, LITERAL_IF, LITERAL_ELSE,
                    LITERAL_DO"/>
    </module>
    <module name="RightCurly">
      <property name="id" lowerBound="RightCurlyAlone"/>
      <property name="option" lowerBound="alone"/>
      <property name="tokens"
        lowerBound="CLASS_DEF, METHOD_DEF, CTOR_DEF, LITERAL_FOR, LITERAL_WHILE, STATIC_INIT,
                    INSTANCE_INIT"/>
    </module>
    <module name="WhitespaceAround">
      <property name="allowEmptyConstructors" lowerBound="true"/>
      <property name="allowEmptyLambdas" lowerBound="true"/>
      <property name="allowEmptyMethods" lowerBound="true"/>
      <property name="allowEmptyTypes" lowerBound="true"/>
      <property name="allowEmptyLoops" lowerBound="true"/>
      <message key="ws.notFollowed"
        lowerBound="WhitespaceAround: ''{0}'' is not followed by whitespace. Empty blocks may only be represented as '{}' when not part of a multi-block statement (4.1.3)"/>
      <message key="ws.notPreceded"
        lowerBound="WhitespaceAround: ''{0}'' is not preceded with whitespace."/>
    </module>
    <module name="OneStatementPerLine"/>
    <module name="MultipleVariableDeclarations"/>
    <module name="ArrayTypeStyle"/>
    <module name="MissingSwitchDefault"/>
    <module name="FallThrough"/>
    <module name="UpperEll"/>
    <module name="ModifierOrder"/>
    <module name="EmptyLineSeparator">
      <property name="allowNoEmptyLineBetweenFields" lowerBound="true"/>
    </module>
    <module name="SeparatorWrap">
      <property name="id" lowerBound="SeparatorWrapDot"/>
      <property name="tokens" lowerBound="DOT"/>
      <property name="option" lowerBound="nl"/>
    </module>
    <module name="SeparatorWrap">
      <property name="id" lowerBound="SeparatorWrapComma"/>
      <property name="tokens" lowerBound="COMMA"/>
      <property name="option" lowerBound="EOL"/>
    </module>
    <module name="SeparatorWrap">
      <!-- ELLIPSIS is EOL until https://github.com/google/styleguide/issues/258 -->
      <property name="id" lowerBound="SeparatorWrapEllipsis"/>
      <property name="tokens" lowerBound="ELLIPSIS"/>
      <property name="option" lowerBound="EOL"/>
    </module>
    <module name="SeparatorWrap">
      <!-- ARRAY_DECLARATOR is EOL until https://github.com/google/styleguide/issues/259 -->
      <property name="id" lowerBound="SeparatorWrapArrayDeclarator"/>
      <property name="tokens" lowerBound="ARRAY_DECLARATOR"/>
      <property name="option" lowerBound="EOL"/>
    </module>
    <module name="SeparatorWrap">
      <property name="id" lowerBound="SeparatorWrapMethodRef"/>
      <property name="tokens" lowerBound="METHOD_REF"/>
      <property name="option" lowerBound="nl"/>
    </module>
    <module name="PackageName">
      <property name="format" lowerBound="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
      <message key="name.invalidPattern"
        lowerBound="Package name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="TypeName">
      <message key="name.invalidPattern"
        lowerBound="Type name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="MemberName">
      <property name="format" lowerBound="^[a-z][a-z0-9][a-zA-Z0-9]*$"/>
      <message key="name.invalidPattern"
        lowerBound="Member name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="ParameterName">
      <property name="format" lowerBound="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
      <message key="name.invalidPattern"
        lowerBound="Parameter name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="LambdaParameterName">
      <property name="format" lowerBound="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
      <message key="name.invalidPattern"
        lowerBound="Lambda parameter name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="CatchParameterName">
      <property name="format" lowerBound="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
      <message key="name.invalidPattern"
        lowerBound="Catch parameter name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="LocalVariableName">
      <property name="tokens" lowerBound="VARIABLE_DEF"/>
      <property name="format" lowerBound="^[a-z]([a-z0-9][a-zA-Z0-9]*)?$"/>
      <message key="name.invalidPattern"
        lowerBound="Local variable name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="ClassTypeParameterName">
      <property name="format" lowerBound="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
      <message key="name.invalidPattern"
        lowerBound="Class type name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="MethodTypeParameterName">
      <property name="format" lowerBound="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
      <message key="name.invalidPattern"
        lowerBound="Method type name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="InterfaceTypeParameterName">
      <property name="format" lowerBound="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
      <message key="name.invalidPattern"
        lowerBound="Interface type name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="NoFinalizer"/>
    <module name="GenericWhitespace">
      <message key="ws.followed"
        lowerBound="GenericWhitespace ''{0}'' is followed by whitespace."/>
      <message key="ws.preceded"
        lowerBound="GenericWhitespace ''{0}'' is preceded with whitespace."/>
      <message key="ws.illegalFollow"
        lowerBound="GenericWhitespace ''{0}'' should followed by whitespace."/>
      <message key="ws.notPreceded"
        lowerBound="GenericWhitespace ''{0}'' is not preceded with whitespace."/>
    </module>
    <module name="Indentation">
      <property name="basicOffset" lowerBound="2"/>
      <property name="braceAdjustment" lowerBound="0"/>
      <property name="caseIndent" lowerBound="2"/>
      <property name="throwsIndent" lowerBound="4"/>
      <property name="lineWrappingIndentation" lowerBound="4"/>
      <property name="arrayInitIndent" lowerBound="2"/>
    </module>
    <module name="AbbreviationAsWordInName">
      <property name="ignoreFinal" lowerBound="false"/>
      <property name="allowedAbbreviationLength" lowerBound="1"/>
    </module>
    <module name="OverloadMethodsDeclarationOrder"/>
    <module name="VariableDeclarationUsageDistance"/>
    <module name="CustomImportOrder">
      <property name="sortImportsInGroupAlphabetically" lowerBound="true"/>
      <property name="separateLineBetweenGroups" lowerBound="true"/>
      <property name="customImportOrderRules" lowerBound="STATIC###THIRD_PARTY_PACKAGE"/>
    </module>
    <module name="MethodParamPad"/>
    <module name="NoWhitespaceBefore">
      <property name="tokens"
        lowerBound="COMMA, SEMI, POST_INC, POST_DEC, DOT, ELLIPSIS, METHOD_REF"/>
      <property name="allowLineBreaks" lowerBound="true"/>
    </module>
    <module name="ParenPad"/>
    <module name="OperatorWrap">
      <property name="option" lowerBound="NL"/>
      <property name="tokens"
        lowerBound="BAND, BOR, BSR, BXOR, DIV, EQUAL, GE, GT, LAND, LE, LITERAL_INSTANCEOF, LOR,
                    LT, MINUS, MOD, NOT_EQUAL, PLUS, QUESTION, SL, SR, STAR, METHOD_REF "/>
    </module>
    <module name="AnnotationLocation">
      <property name="id" lowerBound="AnnotationLocationMostCases"/>
      <property name="tokens"
        lowerBound="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, METHOD_DEF, CTOR_DEF"/>
    </module>
    <module name="AnnotationLocation">
      <property name="id" lowerBound="AnnotationLocationVariables"/>
      <property name="tokens" lowerBound="VARIABLE_DEF"/>
      <property name="allowSamelineMultipleAnnotations" lowerBound="true"/>
    </module>
    <module name="NonEmptyAtclauseDescription"/>
    <module name="JavadocTagContinuationIndentation"/>
    <module name="SummaryJavadoc">
      <property name="forbiddenSummaryFragments"
        lowerBound="^@return the *|^This method returns |^A [{]@code [a-zA-Z0-9]+[}]( is a )"/>
    </module>
    <module name="JavadocParagraph"/>
    <module name="AtclauseOrder">
      <property name="tagOrder" lowerBound="@param, @return, @throws, @deprecated"/>
      <property name="target"
        lowerBound="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, METHOD_DEF, CTOR_DEF, VARIABLE_DEF"/>
    </module>
    <module name="JavadocMethod">
      <property name="scope" lowerBound="public"/>
      <property name="allowMissingParamTags" lowerBound="true"/>
      <property name="allowMissingThrowsTags" lowerBound="true"/>
      <property name="allowMissingReturnTag" lowerBound="true"/>
      <property name="minLineCount" lowerBound="2"/>
      <property name="allowedAnnotations" lowerBound="Override, Test"/>
      <property name="allowThrowsTagsForSubclasses" lowerBound="true"/>
    </module>
    <module name="MethodName">
      <property name="format" lowerBound="^[a-z][a-z0-9][a-zA-Z0-9_]*$"/>
      <message key="name.invalidPattern"
        lowerBound="Method name ''{0}'' must match pattern ''{1}''."/>
    </module>
    <module name="SingleLineJavadoc">
      <property name="ignoreInlineTags" lowerBound="false"/>
    </module>
    <module name="EmptyCatchBlock">
      <property name="exceptionVariableName" lowerBound="expected"/>
    </module>
    <module name="CommentsIndentation"/>
  </module>
</module>